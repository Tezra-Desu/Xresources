!! URxvt

!! Basic Config
URxvt.termName: rxvt-unicode
URxvt.font: xft:Iosevka Nerd Font:size=12
URxvt.scrollBar: false
URxvt.saveLines: 2048
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.iso14755: false
URxvt.keysym.C-c: eval:selection_to_clipboard
URxvt.keysym.C-v: eval:paste_clipboard

!! Perl Extensions
URxvt.perl-ext-common: default,matcher,resize-font
URxvt.url-launcher: /usr/bin/firefox-developer-edition
URxvt.matcher.button: 1
URxvt.colorUL: #D580FF
URxvt.keysym.C-Down: resize-font:smaller
URxvt.keysym.C-Up: resize-font:bigger
URxvt.keysym.C-equal: resize-font:reset

!! Appearance
URxvt.background: [80]#06060a
URxvt.foreground: rgb:ff/ff/ff
*.color0:       #272822
*.color8:       #75715e
*.color1:       #7f24d6
*.color9:       #7f24d6
*.color2:       #278431
*.color10:      #278431
*.color3:       #f4bf75
*.color11:      #f4bf75
*.color4:       #66d9ef
*.color12:      #66d9ef
*.color5:       #ae81ff
*.color13:      #ae81ff
*.color6:       #a1efe4
*.color14:      #a1efe4
*.color7:       #f8f8f2
*.color15:      #f9f8f5
URxvt.depth: 32
